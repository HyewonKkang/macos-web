{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@services/*": ["services/*"],
      "@uikit/*": ["uikit/*"],
      "@apps/*": ["apps/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
