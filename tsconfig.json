{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@": ["src/"],
      "@apps": ["src/apps/*"],
      "@kernel": ["src/kernel"],
      "@platform": ["src/platform"],
      "@system": ["src/system"],
    },
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
